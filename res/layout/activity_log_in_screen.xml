<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.z0nen.menu.log_in_screen"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="20dip"/>


    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textEmailAddress">

        <requestFocus android:layout_width="wrap_content" />

    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_margin="10dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="46dp" />



    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="@string/PostLogin"
        android:onClick="loginPost" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fuelwatch_icon"
        android:visibility="visible"
        android:contentDescription="@string/logo"
        android:id="@+id/logo"
        android:adjustViewBounds="false" />


    <TextView
        android:id="@+id/textViewMess"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="@string/Message"
        android:textSize="20sp"
        android:textIsSelectable="true"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView1"
        android:visibility="invisible"/>



    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OilLevel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:visibility="visible"/>


    <Button
        android:id="@+id/btnViewGauge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_gauge_button_text"
        android:layout_margin="10dip"
        android:onClick="viewGaugePage"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnRegDevice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/regDevice"
        android:layout_margin="10dip"
        android:onClick="regDevice"
        android:visibility="invisible" />

</LinearLayout>







